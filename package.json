    "dev-backend": "vite build --config vite-backend.config.ts --watch",
    "dev-ui": "vite build --config vite-ui.config.ts --watch",
    "gen-license": "npx generate-license-file --input package.json --output THIRD_PARTY_LICENSES.txt"
  },
  "repository": {
