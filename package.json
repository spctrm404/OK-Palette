  },
  "homepage": "https://github.com/spctrm404/okpalette#readme",
  "dependencies": {
    "apca-w3": "^0.1.9",
    "classnames": "^2.5.1",
    "culori": "^4.0.1",
    "react": "^18.3.1",
    "react-aria": "^3.34.3",
    "react-aria-components": "^1.3.3",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.0",
